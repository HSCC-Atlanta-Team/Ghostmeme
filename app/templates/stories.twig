{% extends "layouts/basic.layout.twig" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    {% for meme in memes %}
        {% include 'components/story.twig' %}
        {# dump(meme) #} 
    {% endfor %}
{% endblock %}
{% block javascript %}
    <script>
        $(document).ready(function(){
            $('.user-id').each(function(index){
                var id = $(this).data('id');

                $.getJSON('ajax/users.php?action=getUserInfo&id=' + id, function(data){
                    var user = data.username;

                    if(!user){
                        return;
                    }
                    var el = $(`<a href="users.php?user=${user.owner_id}">${user.first_name}</a>`);

                    $(this).append(el);
                });
            });
        });
    </script>
{% endblock %}

